import java.util.Scanner;
public  class CurrencyConverter {
	double inr,usd;
	double yen,euro;
	Scanner in = new Scanner(System.in);
	 public void inrToUsd() {
		 System.out.println("Enter Number to Convert from Dollars To Rupees");
		 usd = in.nextInt();
		 inr = usd*74.16;
		 System.out.println(usd + " Dollar Equals to " + inr + " Rupees");
		 
	 }
	 public void usdToInr() {
		 System.out.println("Enter Number to Convert from Rupees To Dollars");
		 inr = in.nextInt();
		 usd = inr/74.16;
		 System.out.println(inr +" Rupees Equals to " + usd + " Dollars");
		 
	 }
	 public void inrToEur() {
		 System.out.println("Enter Number to Convert from Euro To Rupees");
		 euro = in.nextInt();
		 inr = euro*84.88;
		 System.out.println(euro + " Euro Equals to " + inr + " Rupees");
		 
	 }
	 public void eurToInr() {
		 System.out.println("Enter Number to Convert from Rupees To Euro");
		 inr = in.nextInt();
		 euro = inr/84.88;
		 System.out.println(inr + " Rupees Equals to " + euro + " Euro");
		 
	 }
	 public void inrToYen() {
		 System.out.println("Enter Number to Convert from Rupees To Yen");
		 yen = in.nextInt();
		 inr = yen*0.65;
		 System.out.println(yen + " Yen Equals to " + inr + " Rupees");
		 
	 }
	 public void yenToInr() {
		 System.out.println("Enter Number to Convert from Yen To Rupees");
		 inr = in.nextInt();
		 yen = inr/0.65;
		 System.out.println(inr + " Rupees Equals to " + yen + " Yen");
		 
	 }
	 
	public static void main(String[] args)
	{
		int choice;
		Scanner s = new Scanner (System.in);
		CurrencyConverter c = new CurrencyConverter();
		System.out.println("Press 1 to Convert Dollar to Rupee ");
		System.out.println("Press 2 to convert Rupee to Dollar ");
		System.out.println("Press 3 to convert Euro to Rupee ");
		System.out.println("Press 4 to convert Rupee to Euro ");
		System.out.println("Press 5 to convert Yen to Rupee ");
		System.out.println("Press 6 to convert Rupee to Yen ");
		choice = s.nextInt();
		switch(choice)
		{
		case 1 :
		{
			c.inrToUsd();
			break;
		}
		case 2 :
		{
			c.usdToInr();
			break;
			
		}
		case 3 :
		{
			c.inrToEur();
			break;
		}
		case 4:
		{
			c.eurToInr();
			break;
		}
		case 5:
		{
			c.inrToYen();
			break;
		}
		case 6:
		{
			c.yenToInr();
			break;
		}
		}
		s.close();	
	}
	public abstract class noCoversion {
		 public abstract void   usdToEur();
		 public abstract void   eurTousd();
		 public abstract void   yenToUsd();
		 public abstract void   usdToYen();
		 public abstract void   yenToEur();
		 public abstract void   eurToYen();	
	}
}

